<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.techease.grubsup">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">
        <activity android:name=".views.activities.SplashScreenActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.AutoCompleteActivity" />
        <activity android:name=".views.activities.SpecificRecipeShoppinListActivity" />
        <activity android:name=".views.activities.MyOrderActivity" />
        <activity
            android:name=".views.activities.CookModeActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNight" />
        <activity android:name=".views.activities.PreferencesActivity" />
        <activity
            android:name=".views.activities.ProfileActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".views.activities.SettingsActivity" />
        <activity
            android:name=".views.activities.CongratulationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.RecipeDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.NavigationTabActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".views.activities.SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".views.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".views.activities.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">

        </activity>
    </application>

</manifest>
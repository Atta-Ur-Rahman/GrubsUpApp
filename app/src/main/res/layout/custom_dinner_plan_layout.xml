<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/iv_plan_image"
            android:layout_width="300dp"
            android:layout_height="210dp"
            android:scaleType="fitXY"
            android:src="@drawable/dinner_plan"/>
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_plan_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="Family Favourites"
        android:textColor="#000000"
        android:textSize="@dimen/list_item_titles_important_text_snippets" />


    <TextView
        android:id="@+id/tv_plan_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="Classic meals the whole family will love."
        android:textColor="@color/orange_color"
        android:textSize="@dimen/secondary_text" />


</LinearLayout>
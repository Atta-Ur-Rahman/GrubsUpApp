<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:background="@color/back_color"
    tools:context=".views.fragments.forgotPassword.ForgotPasswordSendCodeFragment"
    tools:ignore="RtlSymmetry">


    <TextView
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#000"
        android:textSize="@dimen/main_heading_text_size"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_short_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verify"
        android:fontFamily="@font/montserrat_medium"
        android:text="Yoll' shortly receive an email with a\n code , Write code to verify." />


    <LinearLayout
        android:id="@+id/ll_code_blocks"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tv_short_msg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code_num1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@mipmap/rectangle_copy"
            android:ems="10"
            android:inputType="phone"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />

        <EditText
            android:id="@+id/et_code_num2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@mipmap/rectangle_copy"
            android:ems="10"
            android:inputType="phone"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />

        <EditText
            android:id="@+id/et_code_num3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@mipmap/rectangle_copy"
            android:ems="10"
            android:inputType="phone"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />

        <EditText
            android:id="@+id/et_code_num4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@mipmap/rectangle_copy"
            android:ems="10"
            android:inputType="phone"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_verify_code"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_code_blocks"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_button_green"
        android:text="Verify Code"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp" />


    <LinearLayout
        android:id="@+id/ll_resend_conformation_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_verify_code"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_verify_code"
            android:text="Resend Conformation Code in "
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/tv_count_down_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_verify_code"
            android:layout_toRightOf="@id/tv_resend"
            android:text="(1.00)"
            android:textColor="@color/green" />


    </LinearLayout>


    <Button
        android:visibility="gone"
        android:id="@+id/btn_resend_code"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_verify_code"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button_purple"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Resend Code"/>


</RelativeLayout>